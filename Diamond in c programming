  
#include<stdio.h>

int main() {

int a = 0, b = 0, c = 0, d = 0, e = 0, f = 0;


for (a = 1; a <= 10; a++){
    printf("\n");
    for (b = 10; b > a; --b){
        printf(" ");
    }
        for (c = 1; c < (a*2); c++){
            printf("*");

        }

}
printf("\n");
for (d = 1; d <= 9; d++){

    for (e = 1; e <= d; e++){

        printf(" ");

    }
    for(f = 19; f > (d*2); f--){
        printf("*");

    }
    printf("\n");
}
   return 0;
}
